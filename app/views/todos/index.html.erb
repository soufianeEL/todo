<title>Todo App </title>
<div class="container">
	<div class="row">
		<div class="span4">
			<h1>Todo App</h1>
			<hr>
			<p>All your todos here</p>
			<div class="well">
				<% @todo_items.each do |t| %>
				<li> <%= t.todo_item %> </li>
				<% end %>
			</div> <!-- well -->

			<br>
			<br>
			<a href="/todos/delete">Delete last todo</a>
		</div> <!-- span4 -->
	</div> <!-- row -->
</div> <!-- container -->
